@page "/members"
@using LibraryAppBlazor.Models
@inject LibraryAppBlazor.Repository.IRepository<Member> memberRepository
@inject NavigationManager NavManager


<div class="d-flex justify-content-center">
    <div class="custom-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Zoznam čitateľov</h1>
            <a class="btn btn-dark" href="member-form">Pridať čitateľa</a>
        </div>
        <table class="table table-borderless table-striped">
            <thead>
                <tr>
                    <th scope="col">Číslo OP</th>
                    <th scope="col">Priezvisko</th>
                    <th scope="col">Meno</th>
                    <th scope="col">Dátum narodenia</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in MemberList)
                {
                    <tr>
                        <td class="align-middle">@member.IdentityCardNumber</td>
                        <td class="align-middle">@member.Surname</td>
                        <td class="align-middle">@member.Firstname</td>
                        <td class="align-middle">@member.DateOfBirth</td>
                        <td class="align-middle d-flex align-items-center justify-content-end">
                            <a class="btn btn-link" href="member-form/@member.Id">Upraviť</a>
                            <button class="btn btn-link" @onclick="e => DeleteMember(member.Id)">Vymazať</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>