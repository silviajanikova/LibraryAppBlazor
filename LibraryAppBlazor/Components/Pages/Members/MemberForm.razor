@page "/member-form/{memberId?}"
@using LibraryAppBlazor.Models
@inject NavigationManager NavManager

<div class="d-flex justify-content-center">
    <div class="custom-container">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informácie o čitateľovi</h5>
            </div>
            <div class="card-body">
                <EditForm OnValidSubmit="@Submit" Model="MemberData" FormName="MemberForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="mb-3">
                        <label class="form-label" for="input-id-num">Číslo OP</label>
                        <InputText id="nput-id-num" class="form-control" @bind-Value="MemberData!.IdentityCardNumber" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="input-firstname">Meno</label>
                        <InputText id="input-firstname" class="form-control" @bind-Value="MemberData!.Firstname" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="input-surname">Priezvisko</label>
                        <InputText id="input-surname" class="form-control" @bind-Value="MemberData!.Surname" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="input-date">Dátum narodenia</label>
                        <InputDate id="input-date" class="form-control" @bind-Value="MemberData!.DateOfBirth" />
                    </div>

                    <div class="mt-4 d-flex align-items-center">
                        <button type="submit" class="btn btn-primary me-2">Uložiť</button>
                        <a href="/Members" class="btn btn-dark">Zrušiť</a>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>