@page "/book-form/{bookId?}"
@using LibraryAppBlazor.Models
@inject NavigationManager NavManager

<div class="d-flex justify-content-center">
    <div class="custom-container">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informácie o knihe</h5>
            </div>
            <div class="card-body">
                <EditForm OnValidSubmit="@Submit" Model="BookData" FormName="BookForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="mb-3">
                        <label class="form-label" for="input-title">Názov</label>
                        <InputText id="input-title" class="form-control" @bind-Value="BookData!.Title" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="input-author">Autor</label>
                        <InputText id="input-author" class="form-control" @bind-Value="BookData!.Author" />
                    </div>

                    <div class="mt-4 d-flex align-items-center">
                        <button type="submit" class="btn btn-primary me-2">Uložiť</button>
                        <a href="/Books" class="btn btn-dark">Zrušiť</a>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>



